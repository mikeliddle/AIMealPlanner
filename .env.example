# AI Provider Configuration
# Set AI_PROVIDER to either 'openai' or 'gemini'
AI_PROVIDER=gemini

# For OpenAI-compatible APIs (LMStudio, OpenWebUI, etc.):
# AI_PROVIDER=openai
# AI_BASE_URL=http://localhost:1234/v1
# AI_API_KEY=lm-studio
# AI_MODEL=local-model

# For Google Gemini:
# AI_PROVIDER=gemini
# GOOGLE_API_KEY=your-google-api-key-here
# AI_MODEL=gemini-2.0-flash

# Current configuration (Gemini):
GOOGLE_API_KEY=your-google-api-key-here
AI_MODEL=gemini-2.0-flash

# Flask Configuration (set to true for development only)
FLASK_DEBUG=false

# Security settings (recommended for production)
# SECRET_KEY=replace-with-a-long-random-secret
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAMESITE=Lax
SESSION_LIFETIME_HOURS=12
MAX_LOGIN_ATTEMPTS=5
LOGIN_RATE_LIMIT_WINDOW_MINUTES=15

# Google Calendar Integration (Optional)
# To enable calendar integration:
# 1. Follow the guide in docs/CALENDAR.md to set up Google Cloud credentials
# 2. Save the credentials.json file to data/credentials.json
# 3. The first time you use the calendar feature, you'll be prompted to authorize
# No environment variables needed - credentials are stored in data/ directory
